<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services.Servicio01">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="13dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo3"
                    android:visibility="gone" />

                <TextView
                    android:layout_marginTop="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:gravity="center"
                    android:text="GESTIÓN DEL TALENTO HUMANO"

                    android:textSize="@dimen/text_big"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:gravity="center"
                    android:text="CONSULTING ARSI proporcionar herramientas y servicios integrales para el crecimiento y desarrollo de nuestros clientes en temas de Gestión y Administración de Talento Humano a través de efectivos programas de Selección, Capacitación y Asesoría.\n"

                    android:textSize="16dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:clickable="true"
                    android:elevation="8dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:background="@color/bloque01_s2"
                            app:cardBackgroundColor="@color/bloque01_s2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Análisis de Puesto"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:text="Nuestro estudio de aptitudes, habilidades, conocimientos y competencias permite detectar los objetivos, tareas y funciones específicas de cada trabajador.\n"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_medium" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:background="@color/bloque01_s2"
                            app:cardBackgroundColor="@color/bloque02_s2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Selección de Personal"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:text="Su empresa contará con el personal más idóneo cubriendo el puesto a cargo, de acuerdo al perfil solicitado. \n   "
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_medium" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:background="@color/bloque01_s2"
                            app:cardBackgroundColor="@color/bloque01_s2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Evaluación de Desempeño"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:text="Evaluamos a profundidad a través de diversas técnicas e instrumentos para identificar las competencias, habilidades y destrezas de los trabajadores.\n"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            app:cardBackgroundColor="@color/bloque02_s2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Diagnóstico Organizacional"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:text="Disponemos de un diseño de metodologia segun las necesidades del cliente : encuestas , entrevistas a profundidad y/o grupos de enfoque.\n"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:layout_margin="15dp"
                            android:background="@color/bloque01_s2"
                            app:cardBackgroundColor="@color/bloque01_s2"
                            app:cardCornerRadius="25dp"
                            app:cardElevation="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capacitación"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_large"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:gravity="center"
                                    android:text="Les ofrecemos servicios de capacitación psicológica como Clima y cultura Organizacional, Coaching , Inteligencia Emocional y Espiritual.\n"
                                    android:textColor="@color/colorWhite_s2"
                                    android:textSize="@dimen/text_medium" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp">

                <Button
                    android:id="@+id/btnSgiPhone"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/ic_smartphonebest"
                    android:textColor="@color/colorWhite1"
                    android:textSize="@dimen/text_medium" />

                <TextView
                    android:id="@+id/gth1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btnSgiPhone"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Contacto \n Jefe de Gestión \n del Talento Humano"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>



</LinearLayout>